rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Users collection - only admins can read/write
    match /users/{userId} {
      allow read, write: if isAdmin();
    }

    // Transactions collection - only admins can read/write
    match /transactions/{transactionId} {
      allow read, write: if isAdmin();
    }

    // Payment Links collection - only admins can read/write
    match /payment_links/{linkId} {
      allow read, write: if isAdmin();
    }

    // Support Tickets collection - only admins can read/write
    match /support_tickets/{ticketId} {
      allow read, write: if isAdmin();
    }

    // Wallet collection - only admins can read/write
    match /wallets/{walletId} {
      allow read, write: if isAdmin();
    }

    // Wallet Transactions collection - only admins can read/write
    match /wallet_transactions/{transactionId} {
      allow read, write: if isAdmin();
    }

    // Settings collection - only admins can read/write
    match /settings/{settingId} {
      allow read, write: if isAdmin();
    }

    // Logs collection - only admins can read, system can write
    match /logs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Admins collection - only existing admins can read/write
    match /admins/{adminId} {
      allow read, write: if isAdmin();
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}